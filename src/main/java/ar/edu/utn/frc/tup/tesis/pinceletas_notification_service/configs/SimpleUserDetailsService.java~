package ar.edu.utn.frc.tup.tesis.pinceletas_notification_service.configs;

public class SimpleUserDetailsService implements UserDetailsService {

    @Override
    public UserDetails loadUserByUsername(String username) throws UsernameNotFoundException {
        // Para notification-service, solo validamos el JWT
        // No necesitamos cargar usuarios reales desde base de datos
        return User.builder()
                .username(username)
                .password("") // No se usa para autenticaci√≥n JWT
                .authorities("ROLE_USER") // Rol por defecto
                .accountExpired(false)
                .accountLocked(false)
                .credentialsExpired(false)
                .disabled(false)
                .build();
    }
}