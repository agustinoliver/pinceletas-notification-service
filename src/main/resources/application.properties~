# Application Info
spring.application.name=pinceletas-notification-service
server.port=8082

# App metadata for Swagger
app.name=Pinceletas Notification Service
app.desc=API para gestion de notificaciones en tiempo real
app.version=1.0.0
app.dev-name=Equipo Pinceletas
app.dev-email=dev@pinceletas.com

# Database H2
spring.datasource.url=jdbc:h2:mem:notificaciones
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# JPA / Hibernate
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# H2 Console
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# RabbitMQ Configuration
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=guest
spring.rabbitmq.password=guest
spring.rabbitmq.template.default-receive-queue=notificaciones.queue

spring.rabbitmq.listener.simple.auto-startup=true
spring.rabbitmq.listener.simple.acknowledge-mode=auto

# Actuator
management.endpoints.web.exposure.include=health,info
management.endpoint.health.show-details=always

# Logging
logging.level.root=INFO
logging.level.ar.edu.utn.frc.tup.tesis.pinceletas_notification_service=DEBUG
logging.level.org.springframework.amqp=DEBUG
logging.level.org.springframework.rabbit=DEBUG
logging.level.com.rabbitmq=DEBUG

# SpringDoc / Swagger
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.enabled=true
springdoc.swagger-ui.operationsSorter=method
springdoc.swagger-ui.tagsSorter=alpha

# Jackson configuration
spring.jackson.date-format=com.fasterxml.jackson.databind.util.ISO8601DateFormat
spring.jackson.serialization.write-dates-as-timestamps=false

# User Service URL para Feign Client
app.services.user-auth-service.url=http://localhost:8081

# Feign configuration
feign.client.config.default.connectTimeout=5000
feign.client.config.default.readTimeout=5000
feign.client.config.default.loggerLevel=basic

# Logging para Feign (opcional, para debugging)
logging.level.ar.edu.utn.frc.tup.tesis.pinceletas_notification_service.clients=DEBUG